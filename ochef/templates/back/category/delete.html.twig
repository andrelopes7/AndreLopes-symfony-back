<form method="post" action="{{ path('admin_category_delete', {'id': category.id}) }}" 
     onsubmit="return confirm('êtes-vous vraiment sûr de vouloir la supprimer ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete-category' ~ category.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>