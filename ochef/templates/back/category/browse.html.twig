{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
<h1> Liste des catégories</h1>
 <button type="button" class="btn btn-warning m-3"><a href="{{ path('admin_category_add') }}">Créer une nouvelle catégorie</a></button>

<div class="container">
<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-2">

    {% for category in category_list %}
  <div class="col"><li class="list-group-item"><a href="{{ path('admin_category_read', {id : category.id}) }}">{{ category.name }}</a></li></div>
    {% endfor %}
     
   </div>
</div>

{% endblock %}