<form method="post" action="{{ path('admin_ingredient_delete', {'id': ingredient.id}) }}" 
     onsubmit="return confirm('êtes-vous vraiment sûr de vouloir le supprimer ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete-ingredient' ~ ingredient.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>