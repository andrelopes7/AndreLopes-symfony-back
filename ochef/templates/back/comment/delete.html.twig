<form method="post" action="{{ path('admin_comment_delete', {'id': comment.id}) }}" 
     onsubmit="return confirm('êtes-vous vraiment sûr de vouloir supprimer ce commentaire?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete-comment' ~ comment.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>